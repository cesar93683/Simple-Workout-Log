<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.devcesar.workoutapp">

  <application
    android:allowBackup="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:label="@string/title_activity_exercise"
      android:name=".exerciseActivity.ExerciseActivity"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity android:name=".editRoutineActivity.EditRoutineActivity"/>
    <activity android:name=".mainActivity.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".exerciseActivity.editExerciseActivity.EditExerciseActivity"/>
    <activity android:name=".viewExercisesActivity.ViewExercisesActivity"/>
    <activity android:name=".addExerciseActivity.AddExercisesActivity"/>
  </application>

</manifest>